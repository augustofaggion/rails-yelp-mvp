<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, input_html: { type: "number", step: "1", min: "0", max: "5" } %>
  <%= f.submit "Submit your review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Add back to page", restaurant_path(@restaurant) %>
